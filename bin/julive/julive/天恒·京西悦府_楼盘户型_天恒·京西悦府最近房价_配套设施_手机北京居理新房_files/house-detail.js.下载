function pd(){var i=$(".user-cmt");i.each(function(){var i=$(this),n=i.find(".cmt-detail"),e=parseInt(n.css("max-height")),t=parseInt(n[0].scrollHeight),a=i.find(".show-more"),s=i.find(".cmt-detail");t>1.2*e&&a.show(),a.on("click",function(){a.toggleClass("xz"),s.toggleClass("zk")})})}function tab_qh(){var i=$(".tab");i.each(function(){var i=$(this),n=i.children(".tab-t").find("li"),e=i.children(".tab-c");n.each(function(){if($(this).hasClass("t-sel")){var i=n.index(this);e.find(".nrpart").eq(i).show().siblings(".nrpart").hide(),pd()}n.click(function(){$(this).addClass("t-sel").siblings("li").removeClass("t-sel"),i=n.index(this),e.find(".nrpart").eq(i).show(0,pd()).siblings(".nrpart").hide()})})})}function fd(i){var n=i,e=$(".pop"),t=$(".fade");n.each(function(){var i=$(this),n=i.find("img"),a=n.attr("src");n.on("touchstart",function(i){$(".focus").length>0&&clearInterval(timer);var s=i.originalEvent.changedTouches[0].pageX;n.on("touchend",function(i){var n=i.originalEvent.changedTouches[0].pageX;n-s==0?(e.find("img").attr("src",a),e.show(),t.show(),window.scrollTop=0,$(".focus").length>0&&clearInterval(timer)):$(".focus").length>0&&(clearInterval(timer),timer=setInterval(function(){$("#btn_next").click()},5e3))})})}),t.on("touchend",function(){e.hide(),t.hide(),$(".focus").length>0&&(clearInterval(timer),timer=setInterval(function(){$("#btn_next").click()},5e3))})}function showHide(){var i=$(".media-sh");i.each(function(){var i=$(this),n=i.find(".detail"),e=parseInt(n.css("max-height")),t=parseInt(n[0].scrollHeight),a=i.find(".show-more"),s=i.find(".detail");t>1.2*e&&a.show(),a.on("click",function(){a.toggleClass("xz"),s.toggleClass("zk")})})}function shCommon(i){var n=i,e=n.parents(".show-hide"),t=e.find(".change-area");t.toggleClass("change-show"),n.toggleClass("hide-more")}$(function(){if($(".swiper-container").length>0){new Swiper(".swiper-container",{pagination:".swiper-pagination",slidesPerView:"auto",paginationClickable:!0,freeMode:!0})}var i=$(".mod-base").find(".show-more"),n=$(".mod-base").find(".main-info"),e=$(".mod-base").find(".address");i.on("click",function(){n.is(":hidden")?(n.show(),i.find("a").text("收起信息"),e.addClass("zk")):(n.hide(),i.find("a").text("更多信息"),e.removeClass("zk"))});var t=$(".p-cmt"),a=t.find(".user-chk");a.each(function(){var i=$(this);i.on("click",function(){i.toggleClass("user-chk-on"),i.siblings().removeClass("user-chk-on")})});var s=t.find(".pic-area");s.each(function(){var i=$(this),n=i.find(".ico-close2");n.on("click",function(){i.remove()})});var o=$(".p-map"),c=o.find(".map-change"),r=c.find(".ico"),l=o.find(".map-layer"),d=l.find(".close");r.on("click",function(){var i=$(this);i.hasClass("ico-list")?(i.removeClass("ico-list").addClass("ico-map"),l.show()):(i.removeClass("ico-map").addClass("ico-list"),l.hide())}),d.on("click",function(){r.removeClass("ico-map").addClass("ico-list"),l.hide()}),tab_qh();var h=$(".user-cmt").find("li"),f=$(".p-house-type-detail"),u=f.find(".main_image li");fd(h),fd(u);var m=$(".btn-add-pic"),g=$(".input-file");m.on("click",function(){g.trigger("click")})}),$(function(){showHide()}),$(document).on("click",".show-hide .show-more",function(){var i=$(this);shCommon(i)});