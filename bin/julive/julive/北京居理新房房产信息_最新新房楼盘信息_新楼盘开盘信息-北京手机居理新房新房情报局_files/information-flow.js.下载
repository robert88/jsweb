function videoPlay(){function t(t,i,a){jwplayer(t).setup({width:"auto",height:"5rem",file:i,image:a})}$(".playerA").each(function(){var i=$(this),a=i.attr("id"),e=i.attr("data-file"),n=i.attr("data-poster"),o=i.attr("data-duration"),d=i.siblings(".duration-time");t(a,e,n),d.text(o),jwplayer(a).on("play",function(){d.hide()})})}function videoPlayB(){$(".playerB").each(function(){var t=$(this),i=(t.attr("id"),t.attr("data-file")),a=t.attr("data-poster"),e=t.attr("data-duration"),n=' <video id="ishivideo" ishivideo="true" isrotate="false" autoHide="true">\n        <source src='+i+' type="video/mp4">\n    </video>\n    <div class="video-img"><img src='+a+' alt=""></div><div class="duration-time">'+e+"</div>";t.parent(".play").html(n)}),$(".play").each(function(){var t=$(this),i=t.find(".duration-time");t.find(".hi-video-playIcon.offBtn");t.find("video").bind("play",function(){i.hide()})})}function lunbo(t){mySwiper=new Swiper(".swiper-container",{pagination:".swiper-pagination",effect:"slide",initialSlide:t})}function adjust(){/android/.test(navigator.userAgent.toLowerCase())?$("html").attr("data-type",1):$("html").attr("data-type",2)}$(function(){videoPlay(),videoPlayB()}),$(document).on("click",".carousel-img li",function(){var t=$(".fade"),i=$(this).index(),a=$(".swiper-wrapper"),e=$(this).parents(".carousel-img"),n=e.find("li").clone().addClass("swiper-slide");a.append(n),t.show(),t.on("click",function(){a.attr("style",""),a.parents(".swiper-container").attr("class","swiper-container"),a.empty(),$(this).hide(),$("body").unbind("touchmove"),mySwiper.destroy(!1)}),lunbo(i),$("body").on("touchmove",function(t){t.preventDefault()})}),$(function(){adjust()});